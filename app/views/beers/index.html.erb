<h1>Beers</h1>

<div id="beers">
  <% if @beers %>
    <table class="table table-hover">
      <thead>
        <th>Beer</th>
        <th>Style</th>
        <th>Brewery</th>
        <th>Rating</th>
      </thead>
      <% @beers.each do |beer| %>
        <tr>
          <td><%= link_to beer.name, beer_path(beer.id) %></td>
          <td><%= link_to beer.style.name, style_path(beer.style.id) %></td>
          <td><%= link_to beer.brewery.name, brewery_path(beer.brewery.id) %></td>
          <td><%= beer.average %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>

<%= link_to('New Beer', new_beer_path) if current_user %>
