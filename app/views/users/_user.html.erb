<div id="<%= dom_id user %>">
  <p>
    <strong>Username:</strong>
    <%= user.username %>
  </p>

  <p>
    <%= user.ratings.count %> ratings given
  </p>

  <ul>
    <% user.ratings.each do |rating| %>
      <li>
        <%= render rating %>
      </li>
    <% end %>
  </ul>

  <p>
    <strong>Average rating:</strong>
    <%= user.average_rating %>
  </p>

</div>
